---
import '../button/button.css';

interface Props {
	href: string;
	target?: '_blank' | '_self';
	variant?: 'primary' | 'secondary';
	class?: string;
}

const { href, target = '_blank', variant = 'primary', class: className } = Astro.props;
---

<a
	{href}
	{target}
	rel={target === '_blank' ? 'noopener noreferrer' : undefined}
	role="link"
	class:list={[
		'btn-base',
		variant === 'primary' ? 'btn-primary' : 'btn-secondary',
		'group',
		className,
	]}
>
	<slot />
</a>
