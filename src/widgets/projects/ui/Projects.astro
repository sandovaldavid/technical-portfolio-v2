---
import GitHubIcon from '@assets/icons/GitHub.astro';
import LinkIcon from '@assets/icons/Link.astro';
import { LinkButton } from '@shared/ui';
import { getProjectsData } from '@entities/project';
import type { ProjectItem } from '@entities/project';
import { Image } from 'astro:assets';
import { getLangFromUrl, useTranslations } from '@shared/lib/i18n';

const lang = getLangFromUrl(new URL(Astro.request.url));
const t = useTranslations(lang);
const PROJECTS: ProjectItem[] = getProjectsData(t);
---

<div class="flex flex-col gap-y-16">
	{
		PROJECTS.map(({ image, title, description, tags, link, github }) => (
			<article class="flex flex-col space-x-0 space-y-6 sm:space-y-8 group md:flex-row md:space-x-6 lg:space-x-8 md:space-y-0">
				<div class="md:w-1/2">
					<div class="relative flex flex-col items-center overflow-hidden transition duration-500 ease-in-out transform shadow-lg rounded-xl md:group-hover:-translate-y-1 md:group-hover:shadow-2xl lg:border lg:border-gray-800 lg:hover:border-gray-700 lg:hover:bg-gray-800/50">
						<Image
							src={image}
							width={800}
							height={450}
							class="object-cover aspect-video"
							decoding="async"
							loading="lazy"
							alt={`${title} project image`}
						/>
					</div>
				</div>

				<div class=" md:w-1/2 md:max-w-lg">
					<h3 class="text-2xl font-bold text-gray-800 dark:text-gray-100">{title}</h3>
					<div class="flex flex-wrap mt-2">
						<ul class="flex flex-row mb-2 gap-x-2 flex-wrap">
							{tags.map(tag => (
								<li class="mb-3">
									<span
										class={`flex gap-x-2 rounded-full text-xs ${tag.class} py-1 px-2 `}
									>
										<tag.icon class="size-4" />
										{tag.name}
									</span>
								</li>
							))}
						</ul>

						<div class="mt-2 text-gray-700 dark:text-gray-400">{description}</div>
						<footer class="flex items-end justify-start mt-4 gap-x-4">
							{github && (
								<LinkButton href={github}>
									<GitHubIcon class="size-6" />
									{t('projects.code-button')}
								</LinkButton>
							)}
							{link && (
								<LinkButton href={link}>
									<LinkIcon class="size-4" />
									{t('projects.preview-button')}
								</LinkButton>
							)}
						</footer>
					</div>
				</div>
			</article>
		))
	}
</div>
