---
import { getLangFromUrl, useTranslations } from '@shared/lib/i18n';
import { Language } from '@shared/config/i18n';

const langCode = getLangFromUrl(new URL(Astro.request.url));
const lang = langCode === 'en' ? Language.ENGLISH : Language.SPANISH;
const t = useTranslations(lang);
const personalImageAlt = 'Juan David';
---

<article
	class="flex flex-col items-center justify-center gap-8 text-gray-700 dark:text-gray-300 md:flex-row"
>
	<div
		class="[&>p]:mb-4 [&>p>strong]:text-yellow-500 dark:[&>p>strong]:text-yellow-100 [&>p>strong]:font-normal [&>p>strong]:font-mono text-pretty order-2 md:order-1"
	>
		<p set:html={t('about-me.paragraph1')} />
		<p set:html={t('about-me.paragraph2')} />
		<p set:html={t('about-me.paragraph3')} />
	</div>

	<img
		width="200"
		height="200"
		src="/profile/perfil.webp"
		alt={personalImageAlt}
		class="order-1 object-cover w-48 h-48 sm:w-56 sm:h-56 md:w-64 md:h-64 p-1 md:order-2 rotate-3 lg:p-2 aspect-square rounded-2xl bg-black/20 dark:bg-yellow-500/5 ring-1 ring-black/70 dark:ring-white/20"
		style="object-position: 50% 50%"
	/>
</article>
