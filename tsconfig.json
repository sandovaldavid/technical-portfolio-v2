{
	"extends": "astro/tsconfigs/strict",
	"compilerOptions": {
		"baseUrl": ".",
		"paths": {
			"@/*": ["src/*"],
			"@assets/*": ["src/assets/*"],
			"@components/*": ["src/components/*"],
			"@entities/*": ["src/entities/*"],
			"@features/*": ["src/features/*"],
			"@shared/*": ["src/shared/*"],
			"@widgets/*": ["src/widgets/*"],
			"@pages/*": ["src/pages/*"],
			"@styles/*": ["src/styles/*"],
			"@app/*": ["src/app/*"]
		}
	}
}
